<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"

        android:text="Средний курс"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/middleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_help_outline_24"
        app:layout_constraintBottom_toBottomOf="@id/middle"
        app:layout_constraintStart_toEndOf="@+id/middle"
        app:layout_constraintTop_toTopOf="@+id/middle" />

    <TextView
        android:id="@+id/byeOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:text="покупка"
        app:layout_constraintStart_toStartOf="@id/middle"
        app:layout_constraintTop_toBottomOf="@id/middle" />

    <TextView
        android:id="@+id/saleOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:text="продажа"
        app:layout_constraintEnd_toEndOf="@id/middle"
        app:layout_constraintHorizontal_bias="0.358"
        app:layout_constraintStart_toEndOf="@+id/byeOne"
        app:layout_constraintTop_toBottomOf="@id/middle" />
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/byeOne"
    app:layout_constraintStart_toStartOf="parent">

    <TextView
        android:textColor="#BFA75F"
        android:id="@+id/bye1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="84.75"
        app:layout_constraintEnd_toEndOf="@id/byeOne"
        app:layout_constraintStart_toStartOf="@id/byeOne"
        app:layout_constraintTop_toBottomOf="@id/byeOne" />

    <TextView
        android:textColor="#BFA75F"

        android:id="@+id/bye2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="84.75"
        app:layout_constraintEnd_toEndOf="@id/bye1"
        app:layout_constraintStart_toStartOf="@id/bye1"
        app:layout_constraintTop_toBottomOf="@id/bye1" />

    <TextView
        android:id="@+id/bye3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="84.75"
        android:textColor="#BFA75F"

        app:layout_constraintEnd_toEndOf="@id/bye2"
        app:layout_constraintStart_toStartOf="@id/bye2"
        app:layout_constraintTop_toBottomOf="@id/bye2" />

    <TextView
        android:id="@+id/sela1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="84.75"
        app:layout_constraintEnd_toEndOf="@id/saleOne"
        app:layout_constraintStart_toStartOf="@id/saleOne"
        app:layout_constraintTop_toBottomOf="@id/saleOne" />

    <TextView
        android:id="@+id/sela2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="84.75"
        app:layout_constraintEnd_toEndOf="@id/sela1"
        app:layout_constraintStart_toStartOf="@id/sela1"
        app:layout_constraintTop_toBottomOf="@id/sela1" />

    <TextView
        android:id="@+id/sela3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="84.75"
        app:layout_constraintEnd_toEndOf="@id/sela2"
        app:layout_constraintStart_toStartOf="@id/sela2"
        app:layout_constraintTop_toBottomOf="@id/sela2" />


</androidx.constraintlayout.widget.ConstraintLayout>